<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>Provides a wrapper C# wrapper for Evergine of Bullet physic engine using PInvoke. </Description>
    <PackageTags>Evergine;C#;Game Engine;DirectX;OpenGL;OpenGLES;Vulkan;Metal;2D;3D;AR;VR;MixedReality;Mobile;HoloLens</PackageTags>
    <DisableStyleCop>true</DisableStyleCop>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryUrl>https://github.com/EvergineTeam/BulletSharpPInvoke</RepositoryUrl>
  </PropertyGroup>
  

  <ItemGroup>
    <Compile Remove="Properties\AssemblyInfo.cs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Evergine.Mathematics" Version="*" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="demos\**" />
    <Compile Remove="test\**" />
    <EmbeddedResource Remove="demos\**" />
    <EmbeddedResource Remove="test\**" />
    <None Remove="demos\**" />
    <None Remove="test\**" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Resources\NugetIcon\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>
